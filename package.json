{
    "name": "ejs-navigator",
    "displayName": "EJS Navigator for Roku",
    "description": "Navigate from EJS templates to json definitions - Go to Definition and Hover support for BrightScript",
    "version": "0.0.3",
    "publisher": "jack1590",
    "author": {
        "name": "Juan Joya"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/jack1590/ejs-vscode-ext"
    },
    "bugs": {
        "url": "https://github.com/jack1590/ejs-vscode-ext/issues"
    },
    "keywords": [
        "roku",
        "brightscript",
        "ejs",
        "template",
        "navigation",
        "go-to-definition"
    ],
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages", "Other"
    ],
    "activationEvents": [
        "onLanguage:brightscript", "onLanguage:xml", "workspaceContains:**/descarga.json"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "EJS Navigator",
            "properties": {
                "ejsNavigator.jsonFiles": {
                    "type": "array",
                    "default": [
                        "product/descarga.json", "data/constants.json"
                    ],
                    "items": {
                        "type": "string"
                    },
                    "description": "Array of JSON file paths or glob patterns to index (e.g., 'product/descarga.json', 'data/**/*.json')"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/node": "^20.x",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.x",
        "@typescript-eslint/parser": "^6.x",
        "eslint": "^8.x",
        "typescript": "^5.3.0"
    }
}
